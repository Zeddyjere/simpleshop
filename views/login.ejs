<% include partials/header %>
<% include partials/menu2 %>

	<div class="divider"></div>
	<div class="divider"></div>

	<div class="row">
		<div class="col-md-4"></div>
		<div class="col-md-4">

			<% if(errormessage && errormessage.length > 0) { %>
				<div class="alert alert-danger" role="alert">
				  <%= errormessage %>
				</div>
			<% } %>

			<% if(successmessage && successmessage.length > 0) { %>
				<div class="alert alert-success" role="alert">
				  <%= successmessage %>
				</div>
			<% } %>

			<div class="login-header greenbackground"><text>Simple Shop - <strong>Login</strong></text></div>
			<div class="card">
				<div class="card-body generalpadding">
					<form action="/login" method="POST">
					  <div class="form-group">
					    <label for="exampleInputEmail1" class="smalltext greytext">Username</label>
					    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter username" name="username" onkeypress="this.value = this.value.toLowerCase();" required>
					  </div>
					  <div class="form-group">
					    <label for="exampleInputPassword1" class="smalltext greytext">Password</label>
					    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password" required>
					  </div>
					  <div class="smdivider"></div>
					  <button type="submit" class="btn btn-info greenbtn">Login</button>
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-4"></div>
	</div>

<% include partials/footer %>