<% include partials/header %>
<% include partials/menu %>

		<div class="divider"></div>

		<div class="row">
			<div class="col-md-4">
				<div class="card-body">
					<div class="card generalpadding smalltext">
						<strong>NOTE THAT:</strong> Profit and loss calculations will be affected by the change of the Buying Price, Selling Price and/or Quantity fields. <br><br>
						<span><strong>Deleting Inventory</strong> will entirely remove this inventory from your shop and the system will act like it never existed. The profit/loss will <strong>NOT</strong> be calculated. <br><br>
						<em>For these calculations to occur, you must sell the inventory.</em></span>
					</div>
				</div>
			</div>
			<div class="col-md-5">

				<a href="/shops/<%= shop._id %>/inventory" id="addinventory"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back to inventory list</a>
				<div class="smdivider"></div>

				<div class="login-header greenbackground"><text>Simple Shop - <strong>Edit Inventory</strong></text></div>
				<div class="card">
					<div class="card-body generalpadding">
						<form action="/shops/<%= shop._id %>/inventory/<%= inventory._id %>?_method=PUT" method="POST">
						  <div class="form-group">
						    <label class="greytext smalltext" for="shopname">Shop Name</label>
						    <input type="text" class="form-control" id="shopname" aria-describedby="emailHelp" placeholder="<%= shop.shopname %>" readonly>
						  </div>
						  <div class="form-group">
						    <label class="greytext smalltext" for="itemname">Item Name</label>
						    <input type="text" class="form-control" id="itemname" aria-describedby="emailHelp" name="inventory[itemname]" value="<%= inventory.itemname %>" required>
						  </div>
						  <div class="form-group">
						    <label class="greytext smalltext" for="itembprice">Item Buying Price (Each)</label>
						    <input type="number" class="form-control" id="itembprice" aria-describedby="emailHelp" name="inventory[itembprice]" placeholder="in KSH" value="<%= inventory.itembprice %>" required>
						  </div>
						  <div class="form-group">
						    <label class="greytext smalltext" for="itemsprice">Item Selling Price (Each)</label>
						    <input type="number" class="form-control" id="itemsprice" aria-describedby="emailHelp" name="inventory[itemsprice]" placeholder="in KSH" value="<%= inventory.itemsprice %>" required>
						  </div>
						  <div class="form-group">
						    <label class="greytext smalltext" for="quantity">Quantity</label>
						    <input type="number" class="form-control" id="quantity" aria-describedby="emailHelp" name="inventory[quantity]" placeholder="Number of items" value="<%= inventory.quantity %>" required>
						  </div>

						  <input type="text" class="form-control" id="profitloss" value="<%= currentUser.username %>" name="theuser" hidden> 

						  <button type="submit" class="btn btn-info btn-sm greenbtn">Edit Inventory</button>
						</form>
					</div>
				</div>

				<div class="smdivider"></div>

				<form action="/shops/<%= shop._id %>/inventory/<%= inventory._id %>?_method=DELETE" method="POST">
					<input type="text" class="form-control" id="profitloss" value="<%= currentUser.username %>" name="theuser" hidden> 
			  	 	<button type="submit" onclick="return confirm('Are you sure you want to delete this inventory?');" class="btn btn-danger btn-sm" data-dismiss="modal">Delete Inventory</button>
			    </form>

			</div>
			<div class="col-md-3"></div>
		</div>

<% include partials/footer %>